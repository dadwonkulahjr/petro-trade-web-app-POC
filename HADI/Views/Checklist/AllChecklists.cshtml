@model IEnumerable<Checklist>

@{
    ViewBag.Title = "All Checklist";
}

<div id="layoutSidenav">

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
               
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        Checklist
                    </div>
                    <div>
                        <a style="float:right; margin: 2px; width: auto;" type="submit" class="btn btn-success"
                           asp-controller="checklist" asp-action="createChecklist">
                            Add Checker
                        </a>
                    </div>
                    <div class="card-body">
                        

                        <table id="datatablesSimple">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Checker</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Checker</th>
                                    <th>Action</th>

                                </tr>
                            </tfoot>

                            @foreach (var checker in Model)
                            {

                                <tbody>
                                    <tr style="border-bottom: 1px solid #4cff00">
                                        <td>@checker.Id</td>
                                        <td>@checker.Content</td>
                                        <td>
                                            <a type="submit" asp-controller="checklist" asp-action="editChecklist" asp-route-id="@checker.Id"
                                               class="btn btn-warning">
                                                Edit
                                            </a>
                                            <button type="submit"
                                                    class="btn btn-danger">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>

                            }

                        </table>

                    </div>
                </div>
            </div>
        </main>
      
    </div>
</div>