@model IEnumerable<Employee>;
@{
    ViewBag.Title = "Home Page";
}

<div id="layoutSidenav">

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">Dashboard</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
                <div class="row">
                    <div class="col-xl-3 col-md-6">
                        <div class="card bg-primary  text-white mb-4">
                            <div style="font-size: 25px;" class="card-body">Station <span style="font-size:30px; float: right">9 </span> </div> 
                            <div class="card-footer d-flex align-items-center justify-content-between">
                                <a class="small text-white stretched-link" href="#">View Details</a>
                                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card bg-warning text-white mb-4">
                            <div style="font-size: 25px;" class="card-body">Employee <span style="font-size:30px; float: right">75</span> </div>
                            <div class="card-footer d-flex align-items-center justify-content-between">
                                <a class="small text-white stretched-link" href="#">View Details</a>
                                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card bg-success text-white mb-4">
                            <div style="font-size: 25px;" class="card-body">Report <span style="font-size:30px; float: right">200 </span> </div>
                            <div class="card-footer d-flex align-items-center justify-content-between">
                                <a class="small text-white stretched-link" href="#">View Details</a>
                                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="card bg-danger text-white mb-4">
                            <div style="font-size: 25px;" class="card-body">Users <span style="font-size:30px; float: right">6 </span> </div>
                            <div class="card-footer d-flex align-items-center justify-content-between">
                                <a class="small text-white stretched-link" href="#">View Details</a>
                                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        Employee List
                    </div>
                    <div class="card-body">
                        <div>
                            <a style="float:right; margin: 2px; width: auto" type="submit" class="btn btn-success"
                                    asp-controller="home" asp-action="create">
                                Add Employee
                            </a>
                        </div>
                        <table id="datatablesSimple">
                            <thead>
                                <tr>
                                   
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Department</th>
                                    <th>Position</th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tfoot>
                                <tr>
                                    
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Department</th>
                                    <th>Position</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                            @foreach (var employee in Model)
                            {
                                    <tbody>
                                        <tr>

                                            <td>@employee.Name</td>
                                            <td>@employee.Email</td>
                                            <td>@employee.Phone</td>
                                            <td>@employee.Department</td>
                                            <td>@employee.JobTitle</td>
                                           
                                            <td>
                                                <form asp-action="DeleteEmployee" asp-route-id="@employee.Id" method="post">
                                                    <a type="submit" asp-controller="home" asp-action="details" asp-route-id="@employee.Id"
                                                       class="btn btn-warning">
                                                        Details
                                                    </a>
                                                    <button type="submit" class="btn btn-danger"
                                                            onclick="return confirm('Are you sure you want to delete employee: @employee.Name')">
                                                        Delete
                                                    </button>
                                                </form>
                                            </td>
                                            
                                        </tr>
                                    </tbody>
                              }
                        </table>  
                         
                       
                    </div>
                </div>
            </div>
        </main>
      
    </div>
</div>