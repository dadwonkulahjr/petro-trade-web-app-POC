@model CheckListReport
@{
    if (Model.Id == 0)
    {
        ViewData["Title"] = "Add";
    }
    else
    {
        ViewData["Title"] = "Update";
    }
}

@if (Model.Id == 0)
{
    <h2>
        Add new record
    </h2>

}
else
{
    <h2>
        Update record
    </h2>
}
<hr />

<form method="post">
    <div class="border shadow" style="padding:40px;">
        <div class="form-group row">
            <label asp-for="Content" class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input asp-for="Content" class="form-control" placeholder="Content..." />
                <span class="text-danger" asp-validation-for="Content"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-12">
                @if (Model.Id == 0)
                {
                    <button class="btn btn-success" type="submit">
                        Add
                    </button>
                }
                else
                {
                    <button class="btn btn-success" type="submit">
                        Update
                    </button>
                }
                <a class="btn btn-warning" asp-action="Index">
                    Back to List
                </a>
            </div>
        </div>
    </div>

</form>

