@model IEnumerable<IdentityUser>


@{
    ViewBag.Title = "All User";
}

<div id="layoutSidenav">

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">

                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        All Users
                    </div>
                    <div>
                        <a style="float:right; margin: 2px; width: auto" type="submit" class="btn btn-success"
                           asp-controller="account" asp-action="register">
                            Add new User
                        </a>
                    </div>
                    <div class="card-body">


                        <table id="datatablesSimple">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>User Name</th>
                                    <th>Roles</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>User Name</th>
                                    <th>Roles</th>
                                    <th>Action</th>

                                </tr>
                            </tfoot>

                            @foreach (var user in Model)
                            {

                                <tbody>
                                    <tr style="border-bottom: 1px solid #4cff00">
                                        <td>@user.Id</td>
                                        <td>@user.Email</td>
                                        <td>""</td>
                                        <td>
                                           
                                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                                <a asp-controller="account" asp-action="editUser" asp-route-id="@user.Id"
                                                   class="btn btn-warning">
                                                    Edit
                                                </a>
                                                <button type="submit" class="btn btn-danger"
                                                        onclick="return confirm('Are You sure you want to delete this user: @user.UserName')">
                                                    Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                </tbody>

                            }

                        </table>

                    </div>
                </div>
            </div>
        </main>

    </div>
</div>

@section Scripts {

    <script src="~/js/Custom.js"></script>
}