@model LoginViewModel

@{
    ViewBag.Title = "User Login";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card" style="height: 660px;">
            <div class="card-header bg-success text-white">
                <h3><b>Welcome To Petro Trade, Please Sign In</b></h3>
            </div>
            <div class="card-body" style="background-color: #e9ecef;">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <!--image-->
                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-md-12">
                                    <div style="text-align: center;">
                                        <img id="img-upload">
                                        <div id="tem-img">
                                            <img src="~/images/logo.png" height="180" width="150" asp-append-version="true">
                                        </div>
                                        <br><br>

                                    </div>
                                </div>


                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input type="text" class="form-control" asp-for="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Password">Password</label>
                                    <input type="text" class="form-control" asp-for="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-check">
                                    <div class="col-sm-12">
                                        <input class="form-check-input mr-3" asp-for="RememberMe">
                                        <label class="form-check-label" asp-for="RememberMe">
                                            Remember Me?
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12 mt-3 mb-5">
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fa fa-sign-in-alt"></i>&nbsp;Login
                                    </button>
                                    <a asp-controller="home" asp-action="index" class="btn btn-secondary">
                                        <i class="fa fa-arrow-alt-circle-left"></i>&nbsp;Cancel
                                    </a>
                                </div>
                            </div>
                        </div>





                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
