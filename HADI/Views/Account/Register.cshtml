@model RegisterUserViewModel 

@{ 
    ViewBag.Title = "Register New user";
}

<div id="layoutSidenav">

    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4" style="margin-top: 30px;">
                <div class="row">
                    <div class="col-md-10 offset-md-1">
                        <div class="card">
                            <div class="card-header bg-success text-white">
                                <h3><b>Register New User</b></h3>
                            </div>

                            <div class="card-body" style="background-color: #e9ecef;">
                                <form method="post">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label asp-for="Email" class="col-sm-4">Email</label>
                                                        <input type="text" class="form-control col-sm-8" asp-for="Email">
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label asp-for="Password">Password</label>
                                                        <input type="text" class="form-control" asp-for="Password">
                                                        <span asp-validation-for="Password" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label asp-for="ConfirmPassword">Confirm Password</label>
                                                        <input type="text" class="form-control" asp-for="ConfirmPassword">
                                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                

                                            </div>
                                        </div>

                                        <!--image-->
                                        <div class="col-md-4">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div style="text-align: center;">
                                                        <img id="img-upload">
                                                        <div id="tem-img">
                                                            <img src="~/images/logo.png" height="180" width="150" asp-append-version="true">
                                                        </div>
                                                        <br><br>
                                                        
                                                    </div>
                                                </div>

                                               
                                            </div>
                                        </div>

                                        <!-- Btn -->
                                        <div class="col-md-12" style="text-align:center;">
                                            <button type="submit" class="btn btn-warning" style="width: auto;">Register</button>
                                            <button class="btn btn-danger" asp-controller="account" asp-action="allUsers">Back</button>
                                        </div>


                                    </div>
                                </form>
                            </div>

                        </div>
                        <br><br>
                    </div>

                </div>
            </div>
        </main>
    </div>
</div>